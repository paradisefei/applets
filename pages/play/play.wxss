page {
  height: 100%;
}
/* 整个盒子 */
.playContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #7f7f7f;
}
/* 指针 */
.needle {
  width:192rpx;
  height: 274rpx;
}
.needleImg {
  width:100%;
  height: 100%;
  position: relative;
  left: 58rpx;
  top: -36rpx;
  z-index: 3;
  /* 旋转 */
  transform: rotateZ(-20deg);
  transform-origin: 40rpx 0;
  transition: transform 1000ms;
}
.isPlayingDisc {
  transform: rotateZ(0deg);
}
.needle .whiteBall {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  display: block;
  position: relative;
  z-index: 4;
  background-color: white;
  border-radius: 50%;
}
/* 转盘 
  1.旋转的动画
*/
@keyframes rotateDisc {
  from{
    transform: rotateZ(0);
  }
  to{
    transform: rotateZ(-360deg);
  }
}
/* 暂停的时候动画只是暂停不会回到最初的位置 */
.discContainer {
  width: 598rpx;
  height: 598rpx;
  top: -110rpx;
  position: relative;

  animation: rotateDisc 4000ms linear infinite;
  animation-play-state: paused;
}
.isPlayingPad {
  animation: rotateDisc 4000ms linear infinite;
}
.discContainer .disc {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}
.discContainer .songPic {
  width: 370rpx;
  height: 370rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin:auto;
}

/* musicControl */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #fff;
}

.musicControl text {
  width: 20%;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  height: 120rpx;
  line-height: 120rpx;
}
.musicControl text.big {
  font-size: 80rpx;
}

.audioContainer{
  position: absolute;
  bottom:200rpx;
  display:flex;
  width:640rpx;
  height:80rpx;
  line-height:80rpx;
}

.audioContainer .barContainer{
  width:450rpx;
  height:4rpx;
  background:rgba(0, 0, 0, 0.4);
  margin:auto;
}

.audioContainer .barContainer .audio-current-time{
  position: relative;
  width:50%;
  height:4rpx;
  background:red;
}

.audioContainer .barContainer .audio-current-time .audio-time-point{
  position: absolute;
  top:-4rpx;
  right:-6rpx;
  width:12rpx;
  height:12rpx;
  border-radius: 50%;
  background:white;
}

